# Server
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/pace_crm

# Redis
REDIS_URL=redis://localhost:6379

# Clerk
CLERK_SECRET_KEY=
CLERK_PUBLISHABLE_KEY=

# QuickBooks
QBO_CLIENT_ID=
QBO_CLIENT_SECRET=
QBO_REDIRECT_URI=http://localhost:3001/webhooks/qbo/callback
QBO_ENVIRONMENT=sandbox
QBO_WEBHOOK_VERIFIER_TOKEN=

# Microsoft Outlook / Graph API (for email)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URI=http://localhost:3001/api/email/outlook/callback
MICROSOFT_TENANT_ID=common

# AWS S3 (for PDFs)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=pace-crm-pdfs

# JWT (fallback if not using Clerk)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
